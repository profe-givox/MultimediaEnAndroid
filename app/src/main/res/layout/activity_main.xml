<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Reproducir Un Recurso"
        android:onClick="btnRecurso_click" />

    <Button
        android:id="@+id/btnDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRecurso"
        android:layout_alignRight="@+id/btnRecurso"
        android:layout_below="@+id/btnRecurso"
        android:text="Audio del dispositivo"
        android:onClick="btnDispositivo_click" />

    <Button
        android:id="@+id/btnCapturarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDispositivo"
        android:layout_alignRight="@+id/btnDispositivo"
        android:layout_below="@+id/btnDispositivo"
        android:text="Capturar Audio"
        android:onClick="btnCapturarAudio_click" />

    <Button
        android:id="@+id/btnTomarPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCapturarAudio"
        android:layout_alignRight="@+id/btnCapturarAudio"
        android:layout_below="@+id/btnCapturarAudio"
        android:text="Tomar Foto"
        android:onClick="btnTomarPic_click" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTomarPic"
        android:layout_alignRight="@+id/btnTomarPic"
        android:layout_below="@+id/btnTomarPic"
        android:text="Tomar Video"
        android:onClick="video" />

</RelativeLayout>